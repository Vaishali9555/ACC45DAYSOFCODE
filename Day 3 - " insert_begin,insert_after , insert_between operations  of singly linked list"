#include <iostream>
using namespace std;
class Node {
public:
    int data;
    Node* next;
    Node()
    {   data = 0;
        next = NULL;
    }
    Node(int data)
    {   this->data = data;
        this->next = NULL;
    }
};
    Node* head=NULL;
void insertNode(int data)
{
    Node* newNode = new Node(data);
    if (head == NULL) {
        head = newNode;
        return;
    }
    Node* temp = head;
    while (temp->next != NULL) {
        temp = temp->next;
    }
    temp->next = newNode;
}
void printList()
{
    Node* temp = head;
    if (head == NULL) {
        cout << "List empty" << endl;
        return;
    }
    while (temp != NULL) {
        cout << temp->data << " ";
        temp = temp->next;
    }
}
void insert_begin(){
	Node *newnode=new Node();
	cout<<"Enter data"<<endl;
	cin>>newnode->data;
	newnode->next=NULL;
	if(head==NULL){
		head=newnode;
	}
	else {
		newnode->next=head;
		head=newnode;
	}
}
void insert_at_after(){
	int pos;
	cout<<"Enter position where you want to insert a data"<<endl;
	cin>>pos;
	        Node*pre=head;
                int i=1;
		while(i<pos-1){
			pre=pre->next;
			i++;
		}
		Node *newnode=new Node();
		cout<<"Enter data\n";
		cin>>newnode->data;
		newnode->next=pre->next;
		pre->next=newnode;
}
int main()
{   insertNode(1);
    insertNode(2);
    insertNode(3);
    cout << "Elements of the list are: ";
    printList();
    cout << endl;
  
    insert_begin();
    insert_at_after();
  
    cout << "Elements of the list are: ";
    printList();
    cout << endl;
    return 0;
}
